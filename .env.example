# MongoDB Atlas connection string
MONGODB_URI=

# Backend server port
PORT=3001

JWT_SECRET=dev-secret-key-change-in-production-do-not-share

# Frontend origin for CORS (optional, defaults to http://localhost:5173)
FRONTEND_ORIGIN=http://localhost:5173

# Backend API URL
VITE_API_URL=http://localhost:3001

# Email Configuration (for reminder emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# SMTP_SECURE: Set to 'true' to use TLS/SSL encryption (recommended for security)
# If not set, automatically uses secure connection for port 465
SMTP_SECURE=true

{
  "name": "review-scheduler-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "database_scripts",
    "extension"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:extension": "npm run dev --workspace=extension",
    "seed": "npm run seed --workspace=database_scripts",
    "wipe": "npm run wipe --workspace=database_scripts",
    "fixinvalid": "npm run fixinvalid --workspace=database_scripts",
    "fixusers": "npm run fixusers --workspace=database_scripts",
    "send-reminders": "npm run send-reminders --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
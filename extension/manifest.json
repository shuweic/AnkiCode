{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "AnkiCode Extension for Edge",
  "description": "AnkiCode extension to schedule LeetCode practices directly from your browser.",
  "icons": {
    "16": "images/extension_16.png",
    "48": "images/extension_48.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "./action/index.html",
    "default_title": "AnkiCode Extension",
    "default_icon": {
      "16": "images/extension_16.png",
      "48": "images/extension_48.png"
    }
  }
}